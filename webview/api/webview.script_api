  - name: CALLBACK_RESULT_URL_ERROR
    type: number
  - name: CALLBACK_RESULT_URL_LOADING
    type: number
  - name: CALLBACK_RESULT_EVAL_OK
    type: number
  - name: CALLBACK_RESULT_EVAL_ERROR
    type: number
